<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9ddff"
    android:backgroundTint="#c9ddff">

    <TextView

        android:id="@+id/WelcomeText"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="128dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif"
        android:padding="1dp"
        android:paddingStart="10dp"
        android:singleLine="false"
        android:text="Welcome"
        android:textColor="#888888"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/HelloGif"
        app:layout_constraintStart_toStartOf="@+id/topinfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/topinfo"
        android:layout_width="340dp"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif"
        android:padding="1dp"
        android:paddingStart="10dp"
        android:text="Handshape: thumb in palm, fingers straight, palm up
Movement: move hand across body
Location: mid section"
        android:textColor="#888888"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/HelloGif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/nextsignbutton"
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Next Sign"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:theme="@style/PrimaryFlatButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/moreinfobutton"
        app:layout_constraintTop_toBottomOf="@+id/HelloGif"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/moreinfobutton"
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:onClick="MoreInfoButton"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="More Info"
        android:textColor="#888888"
        android:textSize="25sp"
        android:theme="@style/PrimaryFlatButton"
        app:layout_constraintBottom_toBottomOf="@+id/nextsignbutton"
        app:layout_constraintEnd_toStartOf="@+id/nextsignbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nextsignbutton"
        app:layout_constraintVertical_bias="0.0" />

    <VideoView
        android:id="@+id/HelloGif"
        android:layout_width="340dp"
        android:layout_height="223dp"
        android:layout_marginBottom="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeText" />


</android.support.constraint.ConstraintLayout>