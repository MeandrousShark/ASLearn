<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9ddff"
    android:backgroundTint="#c9ddff">

    <TextView
        android:id="@+id/topinfo"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_marginEnd="10dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:paddingEnd="30dp"
        android:paddingStart="20dp"
        android:text="Welcome
Handshape: thumb in palm, fingers straight, palm up
Movement: move hand across body
Location: mid section"
        android:textColor="#888888"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/HelloGif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextsignbutton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Next Sign"
        android:textColor="#888888"
        android:textSize="30sp"
        android:theme="@style/PrimaryFlatButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/moreinfobutton"
        app:layout_constraintTop_toBottomOf="@+id/HelloGif" />

    <Button
        android:id="@+id/moreinfobutton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="More Info"
        android:textColor="#888888"
        android:textSize="30sp"
        android:theme="@style/PrimaryFlatButton"
        app:layout_constraintBottom_toBottomOf="@+id/nextsignbutton"
        app:layout_constraintEnd_toStartOf="@+id/nextsignbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nextsignbutton"
        app:layout_constraintVertical_bias="0.0" />

    <VideoView
        android:id="@+id/HelloGif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="409dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="95dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/nextsignbutton"
        app:layout_constraintStart_toStartOf="@+id/topinfo"
        app:layout_constraintTop_toBottomOf="@+id/topinfo" />


</android.support.constraint.ConstraintLayout>