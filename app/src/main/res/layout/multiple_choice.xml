<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9ddff"
    android:backgroundTint="#c9ddff"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/MCQuestion"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:fontFamily="sans-serif"
        android:padding="1dp"
        android:paddingStart="0dp"
        android:singleLine="false"
        android:text="What is the English meaning for the following sign?"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/MultipleChoiceVid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/MultipleChoiceVid"
        android:layout_width="340dp"
        android:layout_height="190dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toTopOf="@+id/MCSecondGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MCQuestion" />

    <Button
        android:id="@+id/MCFirstGuess"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="22dp"
        android:background="@drawable/buttonrounding"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="first guess"
        android:textColor="#888888"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/MCSecondGuess"
        app:layout_constraintEnd_toStartOf="@+id/MCSecondGuess"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MCSecondGuess"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/buttonrounding"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="second guess"
        android:textColor="#888888"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/MCFourthGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MCFirstGuess"
        app:layout_constraintTop_toBottomOf="@+id/MultipleChoiceVid" />

    <Button
        android:id="@+id/MCThirdGuess"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="22dp"
        android:background="@drawable/buttonrounding"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="third guess"
        android:textColor="#888888"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/MCFourthGuess"
        app:layout_constraintEnd_toStartOf="@+id/MCFourthGuess"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MCFourthGuess"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/buttonrounding"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="fourth guess"
        android:textColor="#888888"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/MCConfirmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MCThirdGuess"
        app:layout_constraintTop_toBottomOf="@+id/MCSecondGuess" />

    <Button
        android:id="@+id/MCConfirmButton"
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonrounding"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MCFourthGuess" />

</android.support.constraint.ConstraintLayout>