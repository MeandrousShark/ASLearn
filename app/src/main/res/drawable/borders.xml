<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#345f94" />
            <stroke
                android:width="2dp"
                android:color="#345f94" />
            <padding
                android:bottom="3dp"
                android:top="3dp"/>
        </shape>
    </item>

    <item
        android:state_selected="true">
        <shape>
            <solid
                android:color="#345f94" />
            <stroke
                android:width="2dp"
                android:color="#345f94" />
            <padding
                android:bottom="3dp"
                android:top="3dp"/>
        </shape>
    </item>
</selector>