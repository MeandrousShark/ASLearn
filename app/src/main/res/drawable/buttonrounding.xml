<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#FFFFFF"/>
            <stroke
                android:color="@color/button_pressed"
                android:width="2dp" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item
        android:state_selected="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/button_selected"
                android:textColor="@android:color/white"/>
            <stroke
                android:color="@color/button_selected"
                android:width="2dp" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item
        android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#7FFFFFFF"
                android:textColor="#7F888888"/>
            <stroke
                android:color="#7FFFFFFF"
                android:width="2dp" />
            <corners
                android:radius="15dp"/>
        </shape>
    </item>



    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="#FFFFFF" />
            <stroke
                android:color="#FFFFFF"
                android:width="2dp"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>

</selector>