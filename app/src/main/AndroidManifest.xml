<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aslearn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/module_menu"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".InfoLesson"
            android:label="Greetings"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".LessonMenu"
            android:label="Lessons"
            android:parentActivityName=".MainMenu" />
        <activity
            android:name=".FingerSpelling"
            android:label="Fingerspelling Quiz" />
        <activity
            android:name=".MultipleChoice" />
        <activity
            android:name=".MyProgress"
            android:label="My Progress"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Quiz"
            android:label="Quiz" />
        <activity
            android:name=".Dictionary"
            android:label="Dictionary"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HistoryLesson"
            android:parentActivityName=".MainMenu"
            />
    </application>

</manifest>